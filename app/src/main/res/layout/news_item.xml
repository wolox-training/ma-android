<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_news_item"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/vTextViewNewsTitle"
        android:layout_width="@dimen/news_title_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/news_title"
        android:textSize="@dimen/font_medium_extra"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vTextViewNewsText"
        android:layout_width="@dimen/news_text_width"
        android:layout_height="@dimen/news_text_height"
        android:layout_marginTop="@dimen/spacing_medium"
        android:textSize="@dimen/font_small_more"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/vTextViewNewsTitle" />

    <TextView
        android:id="@+id/vTextViewNewsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium_more"
        android:text="time"
        android:textSize="@dimen/font_small_more"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/vImageViewHeart"
        android:layout_width="@dimen/spacing_big"
        android:layout_height="@dimen/spacing_big_extra"
        android:layout_marginTop="@dimen/spacing_medium_more"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toBottomOf="@+id/vTextViewNewsTime"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_like_off" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="661dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="72dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <ImageView
        android:id="@+id/vImageViewNewsPicture"
        android:layout_width="@dimen/spacing_huge_extra"
        android:layout_height="@dimen/spacing_huge_extra"
        android:layout_marginStart="@dimen/spacing_large"
        app:layout_constraintStart_toStartOf="parent"
        fresco:layout_constraintBottom_toBottomOf="parent"
        fresco:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>